{
  "extends": ["plugin:@nx/react", "plugin:storybook/recommended", "../../.eslintrc.json"],
  "plugins": ["react-compiler"],
  "ignorePatterns": ["!**/*", "storybook-static"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "storybook/no-uninstalled-addons": 0
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
